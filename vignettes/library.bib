journal = {J. Anim. Ecol.},
keywords = {Acoustics,Animal,Animal: physiology,Animals,Appetitive Behavior,Appetitive Behavior: physiology,Atlantic Ocean,Feeding Behavior,Feeding Behavior: physiology,Female,Male,Pilot,Pilot: physiology,Spain,Swimming,Swimming: physiology,Telemetry,Telemetry: veterinary,Vocalization,Whales},
month = {sep},
