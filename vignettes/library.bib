issn = {19326203},
journal = {PLoS One},
number = {10},
pmid = {24116112},
title = {{North Atlantic Blue and Fin Whales Suspend Their Spring Migration to Forage in Middle Latitudes: Building up Energy Reserves for the Journey?}},
