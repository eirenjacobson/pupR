keywords = {Bayesian network,Biomass prediction,Functional network,Hidden variable,Spatial autocorrelation,Trophic interaction},
number = {October},
pages = {142--158},
publisher = {The Authors},
title = {{Spatio-temporal Bayesian network models with latent variables for revealing trophic dynamics and functional networks in fisheries ecology}},
