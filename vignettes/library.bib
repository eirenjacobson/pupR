file = {::},
issn = {1742-5662},
journal = {J. R. Soc. Interface},
keywords = {Adipose Tissue,Adipose Tissue: physiology,Animals,Biological,Biomechanics,Computer Simulation,Feeding Behavior,Feeding Behavior: physiology,Fin Whale,Fin Whale: physiology,Models,Mouth,Mouth: physiology,Muscle,Pressure,Skeletal,Skeletal: physiology},
month = {nov},
number = {40},
pages = {1005--25},
pmid = {19158011},
title = {{Passive versus active engulfment: verdict from trajectory simulations of lunge-feeding fin whales Balaenoptera physalus.}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=2827442&tool=pmcentrez&rendertype=abstract},
