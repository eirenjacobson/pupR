issn = {0022-0949},
journal = {J. Exp. Biol.},
keywords = {accepted 20 july 2012,baleen whale,dive behavior,gulp feeding,megaptera novaeangliae,prey capture,received 13 february 2012},
number = {21},
pages = {3786--3798},
