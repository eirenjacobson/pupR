author = {Br{\aa}then, K A and Hagberg, O},
doi = {10.1111/j.1654-1103.2004.tb02307.x},
isbn = {1100-9233},
journal = {J. Veg. Sci.},
keywords = {Bistorta vivipara,Rhinanthus minor,abundance,cover,diversity,ericoid,graminoid,herbivory,intercept method,point intercept method,productivity,reindeer,vegetation,weighted linear regression},
language = {English},
