isbn = {2051-3933},
issn = {20513933},
journal = {Mov. Ecol.},
keywords = {Archival tag,Bio-logging,Fine-scale movement,Focal follow,Marine mammal,Megaptera novaeangliae,Positioning,State-space model,Track reconstruction},
number = {1},
pages = {1--16},
