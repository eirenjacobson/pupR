doi = {10.1007/s10021-007-9060-9},
isbn = {1432-9840},
journal = {Ecosystems},
number = {4},
pages = {607--622},
title = {{Can reindeer overabundance cause a trophic cascade?}},
volume = {10},
year = {2007}
