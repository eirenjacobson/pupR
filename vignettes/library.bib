issn = {01718630},
journal = {Mar. Ecol. Prog. Ser.},
keywords = {Acoustics,Barents sea,Capelin,Euphausiids,Fin whale,Humpback whale,Minke whale,Thysanoessa},
pages = {13--29},
title = {{Acoustic surveys of euphausiids and models of baleen whale distribution in the Barents Sea}},
