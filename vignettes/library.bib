keywords = {Birds, diving, behaviour, physiology,Optimality, optimal models, optimal foraging, test,Respiration, gas exchange, oxygen stores, carbon d},
number = {1-2},
pages = {268--283},
pmid = {16884962},
title = {{Optimal diving behaviour and respiratory gas exchange in birds}},
volume = {154},
