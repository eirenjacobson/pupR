journal = {R. Soc. Open Sci.},
keywords = {Animal culture,Cetacean,Cultural evolution,Humpback whale,Song,South pacific},
number = {9},
title = {{Migratory convergence facilitates cultural transmission of humpback whale song}},
volume = {6},
year = {2019}
}
