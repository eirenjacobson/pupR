author = {Olofsson, J and Oksanen, L and Callaghan, T and Hulme, P E and Oksanen, T and Suominen, O},
doi = {10.1111/j.1365-2486.2009.01935.x},
isbn = {1354-1013},
journal = {Glob. Chang. Biol.},
number = {11},
pages = {2681--2693},
title = {{Herbivores inhibit climate-driven shrub expansion on the tundra}},
volume = {15},
year = {2009}
}
