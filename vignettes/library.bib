keywords = {Acceleration,Accelerometry,Animals,Diving,Ecosystem,Euphausiacea,Feeding Behavior,Feeding Behavior: physiology,Fishes,Ice Cover,Models, Biological,Predatory Behavior,Predatory Behavior: physiology,Spheniscidae,Spheniscidae: physiology,Swimming,Video Recording},
