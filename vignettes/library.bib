file = {:C\:/Users/a5406/Documents/Articles/Hazen et al. ScienceMag2015 .pdf:pdf},
isbn = {2375-2548},
issn = {2375-2548},
journal = {Sci. Adv.},
number = {9},
pages = {e1500469--e1500469},
pmid = {26601290},
title = {{Blue whales (Balaenoptera musculus) optimize foraging efficiency by balancing oxygen use and energy gain as a function of prey density}},
