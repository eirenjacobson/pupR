issn = {08240469},
journal = {Mar. Mammal Sci.},
keywords = {Cetaceans,Location class accuracy,Location errors,Path filter,Pinnipeds,Satellite telemetry},
number = {2},
pages = {315--325},
title = {{A simple new algorithm to filter marine mammal Argos locations}},
volume = {24},
year = {2008}
}
