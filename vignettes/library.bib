journal = {Deep. Res. Part I Oceanogr. Res. Pap.},
keywords = {Biologging,Elephant seal,Fisheries sonar,Foraging ecology,Predator-prey interactions,Prey field mapping},
number = {March},
pages = {1--11},
publisher = {Elsevier Ltd},
title = {{A miniature biomimetic sonar and movement tag to study the biotic environment and predator-prey interactions in aquatic animals}},
url = {https://doi.org/10.1016/j.dsr.2019.04.007},
volume = {148},
