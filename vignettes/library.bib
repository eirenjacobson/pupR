journal = {J. Crustac. Biol.},
keywords = {Antarctica,Climate change,Ecosystem services,Krillbase,Policy,Southern ocean,Stock status,Uncertainty},
number = {3},
pages = {316--322},
title = {{Evidence for a decline in the population density of Antarctic krill Euphausia superba Dana, 1850 still stands. A comment on Cox et al.}},
