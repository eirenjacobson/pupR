doi = {10.3402/polar.v33.21630},
issn = {0800-0395},
journal = {Polar Res.},
keywords = {Bioenergetics,SRDLs,TDRs,VHFs,biologging,instrument effects},
language = {en},
month = {feb},
title = {{Instrumentation and handling effects on Antarctic fur seals ( Arctocephalus gazella )}},
