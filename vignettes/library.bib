doi = {10.3354/meps11906},
file = {:C\:/Users/a5406/Documents/Articles/Burrows et al. MEPS2016.pdf:pdf},
issn = {01718630},
journal = {Mar. Ecol. Prog. Ser.},
pages = {245--260},
title = {{Prey density and depth affect the fine-scale foraging behavior of humpback whales Megaptera novaeangliae in Sitka Sound, Alaska, USA}},
